# -*- shell-script -*-
###########################
# xbindkeys configuration #
###########################

# keystate_numlock = enable
# keystate_scrolllock = enable

###########################
#  General functionality  #
###########################

"amixer set Master 5%+ unmute"
XF86AudioRaiseVolume

"amixer set Master 5%- unmute"
XF86AudioLowerVolume

"sh ~/.config/focus.sh"
alt + shift + f

"python ~/.config/modeset.py 'normal'"
m:0x20 + c:37 + F1

"scrot"
alt + shift + s

###########################
#    Quick app access!    #
###########################

"emacsc"
F1

"st"
F2

"firefox"
F3

""
F4

###########################
#  various dmenu scripts  #
###########################

"python3 ~/productivity/toggl.py"
alt + s

"python3 ~/productivity/spotlight.py"
Mod2+Mod4 + space

###########################
#      Spotify binds      #
###########################

# Spotify play/pause
"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
Control+Mod2+Mod4+Shift + p

# Spotify next
"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
Control+Mod2+Mod4+Shift + l

# Spotify prev
"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
Control+Mod2+Mod4+Shift + h

###########################
#      MPD bindings       #
###########################

"mpc next"
Mod4+Mod2+Shift + l

"mpc prev"
Mod4+Mod2+Shift + h

"mpc random"
Mod4+Mod2+Shift + z

"mpc repeat"
Mod4+Mod2+Shift + r

"mpc single"
Mod4+Mod2+Shift + s

"mpc toggle"
Mod4+Mod2+Shift + p

"mpc volume +2"
Mod4+Mod2+Shift + k

"mpc volume -2"
Mod4+Mod2+Shift + j

###########################
#  Experimental stuff(!)  #
###########################

"xdotool type ') '"
Shift_R + c:0xff80

"sleep 0.1 ; xdotool type \\delta"
Release+alt+Shift + l + d
